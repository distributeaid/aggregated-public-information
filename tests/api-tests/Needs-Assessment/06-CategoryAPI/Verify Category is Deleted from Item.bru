meta {
  name: Verify Category is Deleted from Item
  type: http
  seq: 6
}

get {
  url: {{base_url}}/api/items/{{item_document_id}}?populate[0]=category
  body: none
  auth: inherit
}

params:query {
  populate[0]: category
}

tests {
  test("Status code is 200 or 201", function () {
    expect(res.getStatus()).to.be.oneOf([200, 201]);
  });
  
  test("Correct information saved", function () {
    var jsonData = res.getBody();
    expect(jsonData.data.name).to.eql('DemoItem');
    expect(jsonData.data.age_gender).to.eql('Demo age_gender');
    expect(jsonData.data.size_style).to.eql('Demo size_style');
    expect(jsonData.data.category).to.eql(null);
  });
  
}
