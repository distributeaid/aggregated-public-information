meta {
  name: Update Category
  type: http
  seq: 3
}

put {
  url: {{base_url}}/api/categories/{{category_document_id}}
  body: json
  auth: inherit
}

body:json {
  {
    "data": {
      "name": "ModifiedDummyCategory"
    }
  }
}

tests {
  test("Status code is 200 or 201", function () {
    expect(res.getStatus()).to.be.oneOf([200, 201]);
  });
  
  test("Correct information saved", function () {
    var jsonData = res.getBody();
    expect(jsonData.data.name).to.eql('ModifiedDummyCategory');
  });
}
