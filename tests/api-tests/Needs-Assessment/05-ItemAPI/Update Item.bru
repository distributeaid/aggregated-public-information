  body: json
  auth: inherit
}

body:json {
  {
    "data": {
      "age_gender": "New Demo age_gender",
      "size_style": "New Demo size_style"
    }
  }
}

tests {
  test("Status code is 200 or 201", function () {
    expect(res.getStatus()).to.be.oneOf([200, 201]);
  });
  
  test("Correct information saved", function () {
    var jsonData = res.getBody();
    expect(jsonData.data.name).to.eql('DemoItem');
    expect(jsonData.data.age_gender).to.eql('New Demo age_gender');
    expect(jsonData.data.size_style).to.eql('New Demo size_style');
  });
  
}
